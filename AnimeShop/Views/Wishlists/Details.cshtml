@model AnimeShop.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Product Details</h1>

<div class="product-details-container">
    <div class="product-details-image">
        <img src="@Model.Image" alt="@Model.Name" class="product-image-preview" />
    </div>
    <div class="product-details-info">
        <h2 class="product-name">@Model.Name</h2>
        <p class="product-description">@Model.Description</p>
        <p class="product-price">Price: <strong>@Model.Price грн</strong></p>
        <p class="product-stock">Stock: <strong>@Model.Stock</strong></p>
        <p class="product-category">Category: <strong>@Model.Category.CategoryName</strong></p>

        <div class="product-actions">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>

        </div>
    </div>
</div>

<style>
    .product-details-container {
        display: flex;
        gap: 20px;
        margin-top: 20px;
        align-items: flex-start;
    }

    .product-details-image {
        flex: 1;
        text-align: center;
    }

    .product-image-preview {
        max-width: 100%;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .product-details-info {
        flex: 2;
        background: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .product-name {
        font-size: 1.8em;
        margin-bottom: 10px;
    }

    .product-description {
        font-size: 1.2em;
        margin-bottom: 15px;
    }

    .product-price, .product-stock, .product-category {
        font-size: 1em;
        margin-bottom: 10px;
    }

    .product-actions {
        margin-top: 20px;
        display: flex;
        gap: 10px;
    }
</style>
